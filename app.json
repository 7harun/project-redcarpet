{
  "expo": {
    "name": "redcarpet",
    "slug": "redcarpet",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/official_logo_rc.jpeg",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/official_logo_rc.jpeg",
      "resizeMode":"cover",
      "backgroundColor": "#70747D"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "requireFullScreen": true,
      "splash": {
        "image": "./assets/official_logo_rc.jpeg",
        "resizeMode": "cover",
        "backgroundColor": "#70747D"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/official_logo_rc.jpeg",
        "backgroundColor": "#ffffff"
      },
      "package": "com.w3itexperts.redcarpet",
      "permissions": [
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/official_logo_rc.jpeg"
    },
    "extra": {
      "eas": {
        "projectId": "df01eda5-b046-4c48-9f97-6ea0e3e42927"
      }
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera",
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-screen-orientation",
        {
          "initialOrientation": "DEFAULT"
        }
      ]
    ],
    "proxy": "http://localhost:8081" 
  }
}
